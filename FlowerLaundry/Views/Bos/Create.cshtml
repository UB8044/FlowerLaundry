@model FlowerLaundry.Models.Bos

@{
    ViewData["Title"] = "Create";
}

<h2>Tambah Data Bos</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
               <b>@Html.DisplayName("ID Bos")</b>
                <input asp-for="IdBos" class="form-control" />
                <span asp-validation-for="IdBos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b>@Html.DisplayName("Nama Bos")</b>
                <input asp-for="NamaBos" class="form-control" />
                <span asp-validation-for="NamaBos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b>@Html.DisplayName("No HP")</b>
                <input asp-for="NoHp" class="form-control" />
                <span asp-validation-for="NoHp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b>@Html.DisplayName("Email")</b>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b>@Html.DisplayName("Password")</b>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

