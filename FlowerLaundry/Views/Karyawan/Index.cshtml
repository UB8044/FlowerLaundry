@model IEnumerable<FlowerLaundry.Models.Karyawan>

@{
    ViewData["Title"] = "Index";
}

<h2 style="text-align:center; font-family:'Lucida Calligraphy'; font-size:xx-large">Data Karyawan</h2>

<p>
    <a asp-action="Create">Tambah Data</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nama Karyawan")
            </th>
            <th>
                @Html.DisplayName("No HP")
            </th>
            <th>
                @Html.DisplayName("Alamat")
            </th>
            <th>
                @Html.DisplayName("Jenis Kelamin")
            </th>
            <th>
                @Html.DisplayName("Email")
            </th>
            <th>
                @Html.DisplayName("Password")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamaKaryawan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoHp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alamat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JnsKelamin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdKaryawan">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdKaryawan">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdKaryawan">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
