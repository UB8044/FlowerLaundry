@model FlowerLaundry.Models.Karyawan

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Data Karyawan</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdKaryawan" />
            <div class="form-group">
                <b>@Html.DisplayName("Nama Karyawan")</b>
                <input asp-for="NamaKaryawan" class="form-control" />
                <span asp-validation-for="NamaKaryawan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b>@Html.DisplayName("No HP")</b>
                <input asp-for="NoHp" class="form-control" />
                <span asp-validation-for="NoHp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b>@Html.DisplayName("Alamat")</b>
                <input asp-for="Alamat" class="form-control" />
                <span asp-validation-for="Alamat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b>@Html.DisplayName("Jenis Kelamin")</b>
                <select asp-for="JnsKelamin" class="form-control">
                    <option selected disabled>Pilih jenis kelamin</option>
                    <option>L</option>
                    <option>P</option>
                </select>
                <span asp-validation-for="JnsKelamin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b>@Html.DisplayName("Email")</b>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b>@Html.DisplayName("Password")</b>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

